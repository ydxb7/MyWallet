<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="account 1" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:id="@+id/textView2"/>


    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/colorPrimaryDark"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent" android:id="@+id/view"/>
    <TextView
            android:text="account 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/view" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="mnemonic"
            android:id="@+id/mnemonicEditText1" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="mnemonic"
            android:id="@+id/mnemonicEditText2" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
    <Button
            android:text="use sample mnemonic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sampleMnemonicBtn1" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/mnemonicEditText1"/>
    <Button
            android:text="import wallet1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getWalletBtn1" app:layout_constraintStart_toEndOf="@+id/sampleMnemonicBtn1"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mnemonicEditText1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="use sample mnemonic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sampleMnemonicBtn2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mnemonicEditText2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="import wallet2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getWalletBtn2" app:layout_constraintStart_toEndOf="@+id/sampleMnemonicBtn2"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/mnemonicEditText2"/>
    <Button
            android:text="send 1 ETH to account2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sendToAccount2Btn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/getWalletBtn1" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="send 1 ETH to account1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sendToAccount1Btn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/getWalletBtn2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Balance:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sendToAccount2Btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="24sp"/>
    <TextView
            android:text="Balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sendToAccount1Btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="24sp"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/balanceTextView1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sendToAccount2Btn"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/balanceTextView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sendToAccount1Btn"
            app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="8dp"
            android:textSize="24sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>